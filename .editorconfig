# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true
indent_style = space

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2

[*.{xml,xslt}]
indent_size = 4

